<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dfc.ind.mapper.sys.SysAppRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dfc.ind.entity.sys.SysAppRecordEntity">
        <id column="record_id" property="recordId" />
    <result column="remark" property="remark" />
        <result column="user_id" property="userId" />
        <result column="menu_perms" property="menuPerms" />
        <result column="is_collection" property="isCollection" />
        <result column="merchant_id" property="merchantId" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="del_flg" property="delFlg" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        remark,
        record_id, user_id, menu_perms, is_collection, merchant_id, create_by, create_time, update_by, update_time, del_flg
    </sql>

    <delete id="deleteByUserPerms">
        delete from sys_app_record where user_id in
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
        and menu_perms in
        <foreach collection="perms" item="perm" open="(" separator="," close=")">
            #{perm}
        </foreach>
    </delete>
</mapper>
